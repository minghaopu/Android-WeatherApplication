<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_setting"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="csci6907.gwu.weatherapplication.activity.fragment.SettingFragment">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!--format switch-->
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="36dp">

            <Switch
                android:checked="true"
                android:text="@string/label_format"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/format_switch"
                android:textOn="˚F"
                android:textOff="˚C"
                android:showText="true"
                android:layout_weight="1"/>

        </TableRow>
        <!--days -->
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:id="@+id/row_days">

            <TextView
                android:text="@string/label_days"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/label_days"
                android:textColor="#000000"
                android:layout_weight="1"/>

            <TextView
                android:text="3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/value_days"
                android:textColor="#000000"
                android:gravity="right"
                android:layout_weight="1"/>

        </TableRow>


        <!--current switch-->
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="36dp">
            <Switch
                android:checked="true"
                android:text="@string/label_current"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/current_switch"
                android:thumbTextPadding="8dp"
                android:layout_weight="1"/>


        </TableRow>
        <!--zip code-->
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:visibility="invisible"
            android:id="@+id/row_zip">

            <TextView
                android:text="@string/label_zipcode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/label_zipcode"
                android:textColor="#000000"
                android:layout_weight="1"/>

            <TextView
                android:text="22202"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/value_zipcode"
                android:textColor="#000000"
                android:gravity="right"
                android:layout_weight="1"/>

        </TableRow>
    </TableLayout>

</FrameLayout>
